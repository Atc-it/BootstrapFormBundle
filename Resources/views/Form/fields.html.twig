{% block bootstrap_datepicker_widget %}
    <div class="input-append date bootstrap-datepicker" data-date="{{ value }}" data-date-format="yyyy-mm-dd">
        {% spaceless %}
            <input type="text" {{ block('widget_attributes') }} 
            {% if value is not empty %}value="{{ value }}" {% endif %}
            data-week-start="{{ week_start }}"
            data-view-mode="{{ view_mode }}"
            data-min-view-mode="{{ min_view_mode }}"
            />
        {% endspaceless %}
        <span class="add-on"><i class="icon-calendar"></i></span>
    </div>
{% endblock %}

{% block bootstrap_timepicker_widget %}
    <div class="input-append bootstrap-timepicker">
        {% spaceless %}
            <input type="text" {{ block('widget_attributes') }} 
            {% if value is not empty %}value="{{ value }}" {% endif %}
            data-minute-step="{{ minute_step }}"
            data-second-step="{{ second_step }}"
            {% if disable_focus %}data-disable-focus="{{ disable_focus }}" {% endif %}
            {% if with_seconds %}data-show-seconds="{{ with_seconds }}" {% endif %}
            />
        {% endspaceless %}
        <span class="add-on"><i class="icon-time"></i></span>
    </div>
{% endblock %}

{% block bootstrap_daterangepicker_widget %}
    <div class="input-append bootstrap-daterangepicker">
        {% spaceless %}
            <input type="text" {{ block('widget_attributes') }} 
            {% if value is not empty %}value="{{ value }}" {% endif %}
            data-opens="{{ opens }}"
            data-separator="{{ separator }}"
            data-show-week-numbers="{{ show_week_numbers }}"
            data-show-dropdowns="{{ show_dropdowns }}"
            data-min-date="{{ min_date }}"
            data-max-date="{{ max_date }}"
            data-date-limit="{{ date_limit }}"
            data-ranges="{{ ranges }}"
            data-locale="{{ locale }}"
            />
        {% endspaceless %}
        <span class="add-on"><i class="icon-calendar"></i></span>
    </div>
{% endblock %}

{% block bootstrap_email_widget %}
    <div class="input-prepend">
        <span class="add-on"><i class="icon-envelope"></i></span>
        {{ block('form_widget_simple') }}
    </div>
{% endblock %}

{% block bootstrap_percent_widget %}
    <div class="input-append">
        {{ block('form_widget_simple') }}
        <span class="add-on">%</span>
    </div>
{% endblock %}

{% block bootstrap_colorpicker_widget %}
    <div class="input-append bootstrap-colorpicker color" data-color="{{ value }}" data-color-format="{{ format }}">
        {{ block('form_widget_simple') }}
        <span class="add-on">
            <i {% if value %}style="background-color: {{ value }}"{% endif %}></i>
        </span>
    </div>
{% endblock %}
